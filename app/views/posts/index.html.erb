<div class="main posts-index">
  <div class="container">
    <% if @posts.blank? %>
      <div class="posts-index-item">
        <p class="announce-text">まだノートがありません</p>
      </div>
    <% else %>
      <% @posts.each do |post| %>
        <div class="posts-index-item">
          <%= link_to(post.title, "/posts/#{post.id}", class: 'post-title') %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
