<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <h2 class="post-title">
        <%= @post.title %>
      </h2>
      <p>
        <%= markdown(@post.content) %>
      </p>
      <hr>
      <p>
        Ref.<%= link_to @post.reference_title, @post.reference_link, class: "ref", target: "_blank" %>
      </p>
      <div class="post-time">
          <%= @post.created_at %>
      </div>
      <div class="post-menus">
        <%= link_to("編集", "/posts/#{@post.id}/edit") %>
        <%= link_to("削除", "/posts/#{@post.id}/destroy", {method: "post"}) %>
      </div>
    </div>
  </div>
</div>
